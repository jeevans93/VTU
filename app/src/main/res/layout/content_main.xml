<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/attendence"
                android:onClick="attendence"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                card_view:cardCornerRadius="4dp"
                android:stateListAnimator="@anim/lift_on_touch"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                card_view:cardBackgroundColor="#ff5252"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/attendence"
                    android:elevation="5dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingTop="25dp" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Attendence"
                    android:id="@+id/textView"
                    android:textSize="30dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="144dp"
                    android:layout_marginStart="144dp"
                    android:textAlignment="center"
                    android:paddingTop="75dp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/calender"
                android:onClick="calender"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                card_view:cardCornerRadius="4dp"
                android:stateListAnimator="@anim/lift_on_touch"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                card_view:cardBackgroundColor="#2196f3"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="160dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:src="@drawable/calendar"
                    android:elevation="5dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingTop="25dp" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Calender"
                    android:id="@+id/textView2"
                    android:textSize="30dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="144dp"
                    android:layout_marginStart="144dp"
                    android:textAlignment="center"
                    android:paddingTop="75dp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/internals"
                android:onClick="internals"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                card_view:cardCornerRadius="4dp"
                android:stateListAnimator="@anim/lift_on_touch"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                card_view:cardBackgroundColor="#43a047"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="320dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:src="@drawable/internals"
                    android:elevation="5dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingTop="25dp" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Internals"
                    android:id="@+id/textView3"
                    android:textSize="30dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="144dp"
                    android:layout_marginStart="144dp"
                    android:textAlignment="center"
                    android:paddingTop="75dp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/exam"
                android:onClick="exam"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                card_view:cardCornerRadius="4dp"
                android:stateListAnimator="@anim/lift_on_touch"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                card_view:cardBackgroundColor="#ffa000"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="480dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:src="@drawable/exambook"
                    android:elevation="5dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingTop="25dp" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Examination"
                    android:id="@+id/textView4"
                    android:textSize="30dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="144dp"
                    android:layout_marginStart="144dp"
                    android:textAlignment="center"
                    android:paddingTop="75dp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/noticeboard"
                android:onClick="noticeboard"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                card_view:cardCornerRadius="4dp"
                android:stateListAnimator="@anim/lift_on_touch"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                card_view:cardBackgroundColor="#5c6bc0"
                android:layout_marginTop="960dp"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:src="@drawable/noticeboard"
                    android:elevation="5dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingTop="25dp" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Noticeboard"
                    android:id="@+id/textView5"
                    android:textSize="30dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="144dp"
                    android:layout_marginStart="144dp"
                    android:textAlignment="center"
                    android:paddingTop="75dp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Notes"
                android:onClick="notes"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                card_view:cardCornerRadius="4dp"
                android:stateListAnimator="@anim/lift_on_touch"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                card_view:cardBackgroundColor="#26a69a"
                android:layout_marginTop="640dp"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView6"
                    android:src="@drawable/notes"
                    android:elevation="5dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingTop="25dp"
                    android:onClick="notes"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:id="@+id/textView6"
                    android:textSize="30dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="144dp"
                    android:layout_marginStart="144dp"
                    android:textAlignment="center"
                    android:paddingTop="75dp"
                    android:textStyle="bold"
                    android:onClick="notes"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/placements"
                android:onClick="placements"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                card_view:cardCornerRadius="4dp"
                android:stateListAnimator="@anim/lift_on_touch"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                card_view:cardBackgroundColor="#fdd835"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="800dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView7"
                    android:src="@drawable/placements"
                    android:elevation="5dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingTop="25dp" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Placements"
                    android:id="@+id/textView7"
                    android:textSize="30dp"
                    android:layout_below="@+id/card_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="144dp"
                    android:layout_marginStart="144dp"
                    android:textAlignment="center"
                    android:paddingTop="75dp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
